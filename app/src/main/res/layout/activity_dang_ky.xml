<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Đăng Ký"
        android:textColor="#FA9523"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="150dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Tên đăng ký:"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edtEmail_dk"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:hint="Nhập tên đăng ký"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Mật Khẩu"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edtPass_dk"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:hint="Nhập mật khẩu "
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Mật Khẩu nhập lại:"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/edtPassNhapLai_dk"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:hint="Mật khẩu nhập lại"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/btnDangKyMoi"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FA9523"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có tài khoản rồi?  "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/btnDangnhap_dk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F19252"
            android:textColor="#FA9523"
            android:textStyle="bold"
            android:text="Đăng nhập"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>